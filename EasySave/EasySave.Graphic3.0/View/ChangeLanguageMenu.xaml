<Page x:Class="EasySave.Graphic3._0.View.ChangeLanguageMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasySave.Graphic3._0.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChangeLanguageMenu">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock x:Name="TitleLabel"
           FontSize="18" FontWeight="Bold" Margin="0,0,0,10"
           HorizontalAlignment="Center" Text="Choisissez votre langue" />

        <StackPanel x:Name="LanguageStackPanel" Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center"
                    />

        <!-- Bouton Retour -->
        <Button x:Name="BackButton" Grid.Row="2" Width="100" Margin="5" HorizontalAlignment="Center" 
                Click="GoBack_Click" Content="Retour" 
                Style="{StaticResource ModernButtonStyle}"/>
    </Grid>
</Page>
