<Page x:Class="EasySave.Graphic.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Menu Principal">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <!-- Boutons pour les différentes actions -->
            <Button Name="CreateJobButton" Content="Créer un travail de sauvegarde" Margin="0,10,0,0" Click="CreateJobMenu_Click" />
            <Button Name="UpdateJobButton" Content="Modifier un travail de sauvegarde" Margin="0,10,0,0" Click="UpdateSaveJob_Click" />
            <Button Name="ReadJobsButton" Content="Afficher les travaux de sauvegarde" Margin="0,10,0,0" Click="ReadSaveJobs_Click" />
            <Button Name="DeleteJobButton" Content="Supprimer un travail de sauvegarde" Margin="0,10,0,0" Click="DeleteSaveJob_Click" />
            <Button Name="ChangeLanguageButton" Content="Changer la langue" Margin="0,10,0,0" Click="ChangeLanguage_Click" Cursor="Hand" />
            <Button Name ="OpenSettingsButton" Content="Paramètres" Margin="0,10,0,0" Click="OpenSettings_Click" />
            <Button Name="ExitButton" Content="Quitter" Margin="0,10,0,0" Click="Exit_Click" Foreground="Red"/>
        </StackPanel>
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" />

    </Grid>
</Page>
