<Page x:Class="EasySave.Graphic.CreateJobMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Créer un Travail de Sauvegarde">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Name="TitleTextBlock" FontSize="20" FontWeight="Bold"
               HorizontalAlignment="Center" Margin="0,0,0,20" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" MaxWidth="600">
                <TextBlock Name="JobNameLabel" FontWeight="Bold" Text="Nom du travail :" />
                <TextBox Name="JobNameTextBox" Margin="0,5,0,15" MinWidth="300" />
                <TextBlock Name="SourcePathLabel" FontWeight="Bold" Text="Répertoire source :" />
                <TextBox Name="SourcePathTextBox" Margin="0,5,0,15" MinWidth="300" />
                <TextBlock Name="DestinationPathLabel" FontWeight="Bold" Text="Répertoire cible :" />
                <TextBox Name="DestinationPathTextBox" Margin="0,5,0,15" MinWidth="300" />
                <TextBlock Name="SaveTypeLabel" FontWeight="Bold" Text="Type de sauvegarde :" />
                <StackPanel Orientation="Vertical" Margin="0,5,0,15">
                    <RadioButton Name="FullSaveRadioButton" IsChecked="True" Content="Sauvegarde complète" />
                    <RadioButton Name="DifferentialSaveRadioButton" Content="Sauvegarde différentielle" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Name="CreateButton" Width="100" Margin="5" Content="Créer" Click="CreateJob_Click" />
                    <Button Name="BackButton" Width="100" Margin="5" Content="Retour" Click="GoBack_Click" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
